<% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |error| %>
        <%= error %>
    <% end %>
<% end %>


<%= form_for @user do |f| %>
<%= f.label :username %>
<%= f.text_field :username %>
<%= f.label :email %>
<%= f.text_field :email %>
<%= f.label :password %>
<%= f.password_field :password %>
<%= f.submit %>
<% end %>

<%= link_to "Already have an account?", login_path %>