<%= form_for @card do |f| %>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>
    <%= f.label :card_type %><br>
    <%= f.collection_check_boxes :card_type, Card.card_types, :to_s, :to_s %><br>
    <%= f.label :race %><br>
    <% races = Card.all.map {|c| c.race} %><br>
    <%= f.collection_check_boxes :race, Card.races, :to_s, :to_s %><br>
    <%= f.label :Attribute %><br>
    <%= f.collection_check_boxes :attr, Card.attrs, :to_s, :to_s %><br>
    <%= f.label :level %><br>
    <%= f.collection_check_boxes :level, Card.levels, :to_s, :to_s %><br>
    <%= f.label :attack %><br>
    <%= f.text_field :attack %><br>
    <%= f.label :defense %><br>
    <%= f.text_field :defense %><br>
    
    <%= f.submit %>
<% end %>
